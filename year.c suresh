#include <stdio.h>

int main()
{
    int month;
     printf("Enter a month: ");
    scanf("%d",&month);
    if(month%4 == 0)
    {
        if( month%100 == 0)
        {
            if ( month%400 == 0)
                printf("%d is a leap month.", month);
            else
                printf("%d is not a leap month.", month);
        }
        else
            printf("%d is a leap month.", month );
    }
    else
        printf("%d is not a leap month.", month);
    
    return 0;
}
